<div class="text">
  <p>Post Field</p>
</div>

<form class="post-place">
  <div class="form-group">
    <label for="title">Title:</label>
    {{input value=title id="title"}}
  </div>
  <div class="form-group">
    <label for="picture">Picture:</label>
    {{input value=picture id="picture" placeholder="picture url"}}
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    {{textarea value=description id="description" rows="4" cols="50"}}
  </div>
  <button class="btn" {{action 'post'}}>Post</button>
</form>
